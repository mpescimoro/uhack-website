<%= image_tag 'console_fx.gif' %>

<!-- Large -->
<div class='contain-to-grid sticky'>
<nav class="top-bar" data-topbar>
        
  <!-- Title -->
  <ul class="title-area">
    <li class="name"><h1><%= link_to 'Home', root_path %></h1></li>
    <li class="toggle-topbar menu-icon"><a href="#"><span>menu</span></a></li>
  </ul>

  <!-- Links -->
  <section class="top-bar-section">

    <ul class="left">
      <li class="divider"></li>
      <li><a href="#">Chi Siamo</a></li>
      <li class="divider"></li>
      <li><a href="#">Partecipa</a></li>
      <li class="divider"></li>
      <li><%= link_to 'Blog', posts_path %></li>
      <%= topbar_login_logout :super_user, 'user' %>
      <%= topbar_logout_link :admin, 'Logout admin' %>
      <li class="divider"></li>
    </ul>      

    <ul class="right">

      <!-- Search -->
      <%= content_tag_if :li, posts_controller?, class: 'has_form' do %>
        <div class='row collapse'>
          <%= form_tag(search_posts_path, method: :get) do %>
            <div class='small-12 columns'>
              <%= text_field_tag :search, '', placeholder: 'Cerca nel sito...' %>
              <%= submit_tag 'Cerca', style: 'display:none;' %>
            </div>
          <% end %>
        </div>
      <% end %>
    </ul>

  </section>
</nav>
</div>

<!-- Small -->
