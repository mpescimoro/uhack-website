<%= image_tag 'console_fx2.gif' %>
<div class='contain-to-grid sticky'>

  <nav class="top-bar" data-topbar>
        
    <!-- Title -->
    <ul class="title-area">
      <li class="name"><h1><%= link_to 'Home', root_path %></h1></li>
      <li class="toggle-topbar menu-icon"><a href="#"><span>menu</span></a></li>
    </ul>

    <!-- Links -->
    <section class="top-bar-section">

      <ul class="left">
        <li class="divider"></li>
        <li><%= link_to 'Chi siamo', chi_siamo_path %></li>
        <li class="divider"></li>
        <li><%= link_to 'Partecipa', partecipa_path %></li>
        <li class="divider"></li>
        <li><%= link_to 'Blog', posts_path %></li>
      </ul>      

      <ul class="right">

        <!-- Search -->
        <%= content_tag :li, class: 'has_form' do %>
          <div class='row collapse'>
            <%= form_tag(search_posts_path, method: :get) do %>
              <div class='small-12 columns'>
                <%= text_field_tag :search, '', placeholder: 'Cerca ...' %>
                <%= submit_tag 'Cerca', style: 'display:none;' %>
              </div>
            <% end %>
          </div>
        <% end %>
        <%= topbar_profile_link :user %>
        <%= topbar_profile_link :super_user %>
        <%= topbar_login_logout :user, 'user' unless super_user_signed_in? %>
        <%= topbar_logout_link :super_user, 'Logout super' %>
        <%= topbar_logout_link :admin, 'Logout admin' %>
      </ul>

    </section>
  </nav>
</div>
