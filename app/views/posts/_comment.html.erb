<div class='row <%= cycle('comment_even', 'comment_odd') %>'>
	<div class='small-12 columns'>
		<b><%= comment.commenter.username %></b> dice:<br>
		<%= link_uris simple_format(comment.body), target: '_blank' %>
		<% if comment_commenter_signed_in?(comment) %>
			<%= link_to 'Elimina', post_comment_path(@post, comment), method: :delete %> | 
			<%= link_to 'Modifica', edit_post_comment_path(@post, comment) %>
		<% end %>
	</div>
</div>