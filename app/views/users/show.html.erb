<h2>Utente: <%= @user.username %></h2>
<div class='row'>
	<div class='medium-4 columns'>
		<%= image_tag @user.image_url %>
	</div>
	<div class='medium-8 columns'>
		<p><b>Email:</b> <%= @user.email %></p>
		<p><b>Su di lui:</b><%= link_uris simple_format(@user.description) %></p>
	</div>
</div>

<%= link_to 'Modifica account', eval("edit_#{@role}_registration_path") if eval("current_#{@role}") == @user %>