<div class="row">
  <div class="small-12 columns">
    <br>
    <div class="small-3 columns">
      <%= image_tag @user.image_url %>
      <%= link_to 'Modifica account', eval("edit_#{@role}_registration_path") if eval("current_#{@role}") == @user %>
    </div> 
    <div class='small-9 columns'>
      <h3><b><%= @user.profile_title %></b></h3>
      <p><b>Email:</b> <%= @user.email %></p>
      <p><b>Informazioni:</b><%= link_uris simple_format(@user.description) %></p>
      <p><%= tags_for @user, :users %></p>
      <h4 class="subheader">Attivit√† recenti</h4>
      <% @recent_activities.each do |activity| %>
      <%= render 'recent_activity', activity: activity %>
      <% end %>
    </div>
  </div>
</div>
