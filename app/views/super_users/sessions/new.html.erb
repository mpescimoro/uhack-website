<div class="row">
  <div class="small-12 columns">
    <h2>Login associato</h2>

    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), auto_labels: false) do |f| %>
    <div><%= f.label :email_o_nome_utente %><br>
      <%= f.text_field :email, :autofocus => true %></div>

    <div><%= f.label :password %><br>
      <%= f.password_field :password %></div>

    <% if devise_mapping.rememberable? -%>
      <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
    <% end -%>

    <div><%= f.submit "Accedi" %></div>
    <% end %>
    <%= render "users/shared/links" %>
  </div>
</div>
